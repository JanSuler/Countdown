<UserControl x:Class="View.Controls.DigitSegmentVertical"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="5" d:DesignWidth="2" MinHeight="5" MinWidth="2">
    <Path x:Name="Segment" Fill="DarkSlateGray" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Path.Data>
            <PathGeometry>
                <PathFigure StartPoint="1, 0" IsClosed="True">
                    <LineSegment Point="2, 1" />
                    <LineSegment Point="2, 4" />
                    <LineSegment Point="1, 5" />
                    <LineSegment Point="0, 4" />
                    <LineSegment Point="0, 1" />
                </PathFigure>
            </PathGeometry>
        </Path.Data>
    </Path>
</UserControl>
