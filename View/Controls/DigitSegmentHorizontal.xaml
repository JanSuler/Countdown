<UserControl x:Class="View.Controls.DigitSegmentHorizontal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="2" d:DesignWidth="5" MinHeight="2" MinWidth="5">
    <Path x:Name="Segment" Fill="DarkSlateGray" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Path.Data>
            <PathGeometry>
                <PathFigure StartPoint="1, 0" IsClosed="True">
                    <LineSegment Point="4, 0" />
                    <LineSegment Point="5, 1" />
                    <LineSegment Point="4, 2" />
                    <LineSegment Point="1, 2" />
                    <LineSegment Point="0, 1" />
                </PathFigure>
            </PathGeometry>
        </Path.Data>
    </Path>
</UserControl>
